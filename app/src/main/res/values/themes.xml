<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BEMO" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="homeTabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_size_tab</item>
    </style>

    <style name="myTabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>


    <style name="btn_peek" parent="@android:style/Widget.Button">
        <item name="android:layout_width">53dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/shapebtn2</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:drawableRight">@mipmap/imgexit</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/font_size_10</item>
        <item name="android:text">업체</item>
    </style>

    <style name="text_black_12"  parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_12</item>
