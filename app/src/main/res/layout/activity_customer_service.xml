<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/btnExit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/imb_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/text_black_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txtKaKao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/customer_service_kakao"/>

    <TextView
        style="@style/text_black_16"
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtKaKao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/customer_service_email_text"/>


    <Button
        android:layout_width="@dimen/height_20"
        android:layout_height="@dimen/height_20"
        android:id="@+id/btnKakao"
        app:layout_constraintLeft_toRightOf="@id/txtKaKao"
        app:layout_constraintTop_toTopOf="@id/txtKaKao"
        app:layout_constraintBottom_toBottomOf="@id/txtKaKao"
        android:background="@drawable/img_msg"/>

    <Button
        android:layout_width="@dimen/height_20"
        android:layout_height="@dimen/height_20"
        android:id="@+id/btnEmail"
        app:layout_constraintLeft_toRightOf="@id/txtEmail"
        app:layout_constraintTop_toTopOf="@id/txtEmail"
        app:layout_constraintBottom_toBottomOf="@id/txtEmail"
        android:background="@drawable/img_msg"/>

</androidx.constraintlayout.widget.ConstraintLayout>