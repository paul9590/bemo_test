<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.CompanyReviewFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="115dp" />

    <TextView
        android:id="@+id/txtReviewCnt"
        style="@style/text_black_16"
        android:layout_marginStart="@dimen/margin_left_24"
        android:layout_marginTop="@dimen/margin_top_19"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtReview1"
        style="@style/text_gray2_10"
        android:text="@string/company_review_desc"
        app:layout_constraintLeft_toLeftOf="@id/txtReviewCnt"
        app:layout_constraintTop_toBottomOf="@id/txtReviewCnt" />

    <RatingBar
        android:id="@+id/ratingReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/guideTop"
        app:layout_constraintLeft_toLeftOf="@id/txtReviewCnt"
        app:layout_constraintTop_toBottomOf="@id/txtReview1" />

    <TextView
        android:id="@+id/txtReviewAvg"
        style="@style/text_black_16"
        android:layout_marginStart="@dimen/margin_left_8"
        app:layout_constraintBottom_toBottomOf="@id/ratingReview"
        app:layout_constraintLeft_toRightOf="@id/ratingReview"
        app:layout_constraintTop_toTopOf="@id/ratingReview" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewCompanyReview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_top_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideTop" />


</androidx.constraintlayout.widget.ConstraintLayout>